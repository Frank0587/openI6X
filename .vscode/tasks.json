{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "build OpenI6X (via Docker.run)",
			"command": "docker.exe",
			"args": [
				"run",
				"<",
				"openI6X.docker.run"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [],
			"group": "build"
		},
		{
			"type": "shell",
			"label": "build OpenI6X (via Docker)",
			"command": "docker.exe",
			"args": [
				"run",
				"--rm",
				"-it",
				"-e",
				"\"BOARD_NAME=i6x",
				"CMAKE_FLAGS=PCB=I6X",
				"HELI=NO",
				"GVARS=YES",
				"LUA_COMPILER=NO",
				"MULTIMODULE=NO",
				"PCBI6X_ELRSV3=NO",
				"PCBI6X_BACKLIGHT_MOD=YES",
				"DEBUG=NO\"",
				"-v",
				"v:/git/openi6x:/opentx",
				"ajjjjjjjj/opentx-docker-i6x"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [],
			"detail": "CMake template build task"
		},
		{
			"type": "shell",
			"label": "init for Pico SDK",
			"command": "C:\\WINDOWS\\System32\\WindowsPowerShell\\v1.0\\powershell.exe",
			"args": [
				"-NoProfile",
				"-WindowStyle",
				"Hidden",
				"-ExecutionPolicy",
				"Bypass",
				"-File",
				"C:\\Program Files\\Raspberry Pi\\Pico SDK\\pico-code.ps1"
			]
		},
		{
			"type": "cmake",
			"label": "CMake: build",
			"command": "build",
			"targets": [
				"all"
			],
			"group": "build",
			"problemMatcher": [],
			"detail": "CMake template build task"
		}
	]
}